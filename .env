# Environment Variables for ExpenseNavigator

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-here

# Storage Backend Configuration
# Set to 'true' to use Supabase, 'false' for in-memory storage
USE_SUPABASE=false

# Supabase Configuration (only needed if USE_SUPABASE=true)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_ANON_KEY=your-anon-key-here

# Database Configuration (if using direct PostgreSQL)
DATABASE_URL=postgresql://postgres:SLIM.V.@localhost:5432/Expense_app

DB_USER=postgres
DB_PASSWORD=SLIM.V.
DB_HOST=localhost
DB_PORT=5432
DB_NAME=Expense_app

# Development Settings
NODE_ENV=development
PORT=5000

NGROK_AUTHTOKEN=your_actual_auth_token_here
NGROK_DOMAIN=your_actual_domain_here
